SELECT 
    f.id AS faculty_id,
    f.faculty_name,
    f.designation,
    f.address,
    c.id AS consultancy_id,
    c.year,
    c.title,
    c.commencement_date,
    c.completion_date,
    c.research_staff_expenses,
    c.travel,
    c.computer_charges,
    c.nmims_facility_charges,
    c.miscellaneous_including_contingency,
    c.advanced_payment,
    c.final_payment,
	c.gross_fees,
	c.per_session_fees ,
	c.days ,
	c.sessions ,
	c.total_fees ,
	c.faculty_shares,
	c.nmims_shares
FROM 
    faculty_table f
JOIN 
    consultancy_approval_form c ON f.id = c.faculty_table_id;


