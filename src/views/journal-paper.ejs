                                <option value="<%= faculty.id %>">
                                   <%= faculty.name %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                    <!-- No. of NMIMS Authors -->
                    <div class="form-group col-lg-4 col-md-6 col-sm-12 mb-4">
